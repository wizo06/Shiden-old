{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "google"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "prefer-promise-reject-errors": [
      "off"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "max-len": [
      "off"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ]
  }
}